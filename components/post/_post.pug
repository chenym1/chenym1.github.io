//- Post classic
	@param {object} data - thumbnail data object
	@param {string} data.title - post title
	@param {string} data.img - post image
	@param {string} [data.link] - post main link
	@param {string} [data.label] - post label
	@param {string} data.autor - post autor
	@param {string} data.date - post publication date
	@param {string} data.comments - post comments
	@param {array} [data.tags] - post tags array
	@param {string} data.btnText - post btn text
mixin post-classic( data )
	// Post classic
	.post&attributes( attributes )
		h3.post-title: a( href= data.link ? data.link : 'single-post.html' )= data.title
		.post-meta
			if ( data.label )
				.post-meta-item: a.post-meta-link.post-meta-link-primary( href='single-post.html' )= data.label
			.post-meta-item
				span.post-meta-icon.int-user.novi-icon
				a.post-meta-link( href='single-post.html' )= data.autor
			.post-meta-item
				span.post-meta-icon.int-clock.novi-icon
				a.post-meta-link( href='single-post.html' )= data.date
		a.post-img-link( href= data.link ? data.link : 'single-post.html' )
			+img( data.img )
		.post-text= data.postText
		.post-meta
			.post-meta-item
				span.post-meta-icon.int-chat.novi-icon
				a.post-meta-link( href= data.link ? data.link : 'single-post.html' )= data.coments
			if ( data.tags )
				.post-meta-item
					span.post-meta-icon.int-tag.novi-icon
					.post-tags
						= 'Tags: '
						each tag, index in data.tags
							a.post-tag( href='single-post.html' )= tag
							if ( index < data.tags.length - 1 )
								= ', '
		a.btn.btn-primary.post-btn( href= data.link ? data.link : 'single-post.html' )= data.btnText ? data.btnText : 'Read more'

