//- Post simple
	@param {object} data - thumbnail data object
	@param {string} data.title - post title
	@param {string} [data.img] - post image
	@param {string} [data.link] - post main link
	@param {string} [data.label] - post label
	@param {string} [data.autor] - post autor
	@param {string} [data.date] - post publication date
	@param {string} [data.btnText] - post btn text
mixin post-simple( data )
	// Post simple
	.post.post-simple&attributes( attributes )
		if ( data.img )
			a.post-img-link( href= data.link ? data.link : 'post-intro.html' )
				+img( data.img )
		if ( data.autor )
			.post-meta
				.post-meta-item
					span.post-meta-icon.int-user.novi-icon
					a.post-meta-link( href='post-intro.html' )= data.autor
		h5.post-title: a( href= data.link ? data.link : 'post-intro.html' )= data.title
		if ( data.postText )
			.post-text= data.postText
		if ( data.label || data.date)
			.post-meta
				if ( data.label )
					.post-meta-item: a.post-meta-link.post-meta-link-primary( href='post-intro.html' )= data.label
				if ( data.date )
					.post-meta-item
						span.post-meta-icon.int-clock.novi-icon
						a.post-meta-link( href='post-intro.html' )= data.date
		if ( data.btnText )
			a.btn.btn-secondary.post-btn( href= data.link ? data.link : 'post-intro.html' )= data.btnText
