//- Offer box divided
	@param {object} data - offer-box data object
	@param {string} data.title - offer-box title
	@param {string} data.text - offer-box description
	@param {string} data.link - offer-box link
	@param {string} data.btnText - offer-box button text
mixin offer-box-divided( data )
	// Offer box divided
	.offer-box.offer-box-divided&attributes( attributes )
		h6.offer-box-subtitle= data.subtitle
		h3.offer-box-title= data.title
		hr.divider.divider-dark.offer-box-divider
		.offer-box-text= data.text
		a.btn.btn-lg.btn-dark.rounded-0.offer-box-btn( href= data.link ? data.link : 'speakers.html' )= data.btnText ? data.btnText : 'Learn More'
